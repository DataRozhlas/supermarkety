@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .selector
    position absolute
    top 5px
    left 5px
    width 200px
    > div
    > div *
      box-sizing content-box

  .map
    width 610px
    position relative
    svg
      .mesh
        fill none
        stroke #f
        stroke-opacity 0.5
        stroke-width 0.5
      .firmy
        g.market
          opacity 0.9
          transition opacity 0.2s
          path
            stroke none

        &:hover
          g.market
            opacity 0.3
            &:hover
              opacity 0.9
              cursor help
        &.highlight
          g.market
            opacity 0.1
          g.highlight g.market
            opacity 0.9
    .barchart
      position absolute
      bottom 0px
      left 0px
      width 100%
      height 60px
      background linear-gradient(to bottom, rgba(255,255,255,0) 0px, rgba(255,255,255,1) 20px)
      .bar
        float left
        height 60px
        border-left 4px solid white
        border-right 4px solid white
        position relative
        &:first-child
          border-left 0px none
        &:last-child
          border-right 0px none
        .fill
        .nazev
          transition opacity 0.2s
        .fill
          margin-top 34px
          height 4px
          border-radius 2px
        .nazev
          display block
          position absolute
          padding-top 3px
          left 50%
          transform translate(-50%, 0)
          opacity 0.7
          z-index 1
          text-align center
          font-variant small-caps
          font-size 13px
          line-height 15px
          .podil
            font-size 11px
          &:hover
            cursor default
      &:hover
        .bar
          .fill
            opacity 0.2
          .nazev
            opacity 0.2

          &:hover
            .fill
            .nazev
              opacity 1



