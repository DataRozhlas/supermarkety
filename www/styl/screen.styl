@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .map
    width 610px
    position relative
    svg
      .mesh
        fill none
        stroke #f
        stroke-opacity 0.5
        stroke-width 0.5
      .firmy
        path
          stroke none
          fill-opacity 0.9
          transition fill-opacity 0.2s

        &:hover
          path
            fill-opacity 0.3
            &:hover
              fill-opacity 0.9
        &.highlight
          path
            fill-opacity 0.1
          g.highlight path
            fill-opacity 0.9
    .barchart
      position absolute
      bottom 0px
      left 0px
      width 100%
      height 60px
      background linear-gradient(to bottom, rgba(255,255,255,0) 0px, rgba(255,255,255,1) 20px)
      .bar
        float left
        height 60px
        border-left 4px solid white
        border-right 4px solid white
        position relative
        &:first-child
          border-left 0px none
        &:last-child
          border-right 0px none
        .fill
        .nazev
          transition opacity 0.2s
        .fill
          margin-top 34px
          height 4px
          border-radius 2px
        .nazev
          display block
          position absolute
          left 50%
          transform translate(-50%, 0)
          opacity 0.7
      &:hover
        .bar
          .fill
            opacity 0.2
          .nazev
            opacity 0.2

          &:hover
            .fill
            .nazev
              opacity 1



